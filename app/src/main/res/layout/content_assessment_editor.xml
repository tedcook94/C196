<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="tk.tedcook.wgutermtracker.AssessmentEditorActivity"
                tools:showIn="@layout/activity_assessment_editor">


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_assessment"
            android:id="@+id/button"
            android:layout_below="@+id/gridLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:onClick="saveAssessmentChanges" />

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <TextView
                android:text="@string/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:id="@+id/tvAssessmentCode" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etAssessmentCode" />

        <TextView
                android:text="@string/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/tvAssessmentName" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:inputType="text"
                android:ems="10"
                android:maxLines="1"
                android:id="@+id/etAssessmentName" />

        <TextView
                android:text="@string/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:id="@+id/tvAssessmentDatetime" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:inputType="text"
                android:maxLines="3"
                android:ems="10"
                android:id="@+id/etAssessmentDatetime" />

        <TextView
                android:text="@string/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:id="@+id/tvAssessmentDescription" />

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:inputType="text"
                android:maxLines="3"
                android:ems="10"
                android:id="@+id/etAssessmentDescription" />

    </GridLayout>


</RelativeLayout>